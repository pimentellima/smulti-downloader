{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "compilerOptions": {
        "target": "ES2022",
        "lib": ["ES2022"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowJs": true,
        "outDir": "dist",
        "rootDir": "src",
        "noEmit": false,
        "types": ["node"]
    },
    "include": ["**/*.ts", "**/*.js"]
}
